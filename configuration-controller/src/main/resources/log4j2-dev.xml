<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" monitorInterval="30">
	<profile>dev</profile>
	<Properties>
		<Property name="LOG_FORMAT">%d{yyyy-MM-dd HH:mm:ss} %p %m%n</Property>
		<Property name="BASE_DIR">/root/mcmp/log/configcontroller</Property>
	</Properties>
	
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="${LOG_FORMAT}" />
		</Console>
		<RollingFile name="File"
					 filename="${BASE_DIR}/confController-daily.log"
					 filePattern="${BASE_DIR}/confController-daily. %d{yyyyMMdd}.log">
			<PatternLayout pattern="${LOG_FORMAT}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
			<DefaultRolloverStrategy>
				<Delete basePath="${BASE_DIR}">
					<IfFileName glob="*.log" />
					<IfLastModified age="30d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingFile>
	</Appenders>
	
	<Loggers>
		<Logger name="com.mcmp.controller" level="DEBUG" additivity="false">
			<AppenderRef ref="File" />
		</Logger>
		<Logger name="org.springframework" level="INFO">
			<AppenderRef ref="File" />
		</Logger>
		
		<Logger name="org.apache.commons" level="off" />
		<Logger name="org.hibernate.validator" level="off" />
		
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>
